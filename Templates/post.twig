{% extends '/layout/default.twig'%}
    {% block content %}
        <!--================Home Banner Area =================-->
        <section class="banner_area">
            <div class="box_1620">
                <div class="banner_inner d-flex align-items-center" style="
                background-image:url('/Templates/img/blog/baniere/baniere.jpg');
                background-position : center; background-size: 100%; border-radius: 15px;">
                    <div class="container">
                        <div class="banner_content text-center" >
                            <h2>Article</h2>
                            <div class="page_link">
                                <a href="/home">Accueil</a>
                                <a href="/listpost/0">Articles</a>
                                <a href="#">{{Post.title}}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================End Home Banner Area =================-->

        <!--================Blog Area =================-->
        <section class="blog_area single-post-area p_120">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 posts-list">
                        <div class="single-post row">
                            <div class="col-lg-4  col-md-4">
                                <div class="blog_info text-right">
                                    <div class="post_tag">
                                        <a href="#">{{ Category.name }}</a>
                                    </div>
                                    <ul class="blog_meta list">
                                        <li><a href="#">{{ User.firstname }} {{ User.surname }}<i class="lnr lnr-user"></i></a></li>
                                        <li><a href="#">{{ Post.updateDate }}<i class="lnr lnr-calendar-full"></i></a></li>
                                        <li><a href="#">Comments<i class="lnr lnr-bubble"></i></a></li>
                                    </ul>
                                    <ul class="social-links">
                                        <li><a href="http://facebook.com/jeremy.bouvier.522"><i class="fa fa-facebook"></i></a></li>
                                        <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                        <li><a href="#"><i class="fa fa-github"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-8 blog_details">
                                <img src="../Templates/theme_bootstrap/img/blog/main-blog/m-blog-1.jpg" alt="" style="width: 100%;">
                                <h2>{{Post.title}}</h2>
                                <p class="excert">
                                    {{Post.content}}
                                </p>
                            </div>

                        </div>
                        <div class="comments-area">
                            <h3 class="text-center">Commentaires</h3>
                            <div class="comment-list">
                                {% for comments in Comment %}
                                <div class="single-comment justify-content-between d-flex m-5">
                                    <div class="user justify-content-between d-flex">
                                        <div class="thumb">
                                            <img src="../Templates/theme_bootstrap/img/blog/logo.jpg" alt="">
                                        </div>
                                        <div class="desc">
                                            <h5 style="color: #766dff">{{ comments.author }}</h5>
                                            <p class="date">Le : {{ comments.updatedate }}</p>
                                            <p class="comment">
                                                {{ comments.commenttext }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                {%  endfor %}
                            </div>

                        </div>
                        <div class="comment-form">
                            <h3>Laisser un Commentaire</h3>
                            {% include 'commentForm.twig' %}
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="blog_right_sidebar">
                            {% include 'asideLeft.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================Blog Area =================-->

    {% endblock content %}


