{% extends '/layout/default.twig'%}
    {% block content %}
        <!--================Home Banner Area =================-->
        <section class="banner_area">
            <div class="box_1620">
                <div class="banner_inner d-flex align-items-center" style="
                    background-image:url('/Templates/img/blog/baniere/baniere.jpg');
                    background-position : center; background-size: 100%; border-radius: 15px;">
                    <div class="container">
                        <div class="banner_content text-center" >
                            <h2>Me contacter</h2>
                            <div class="page_link">
                                <a href="/home">Accueil</a>
                                <a href="/contact">Contact</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================End Home Banner Area =================-->

        <!--================Contact Area =================-->
        <section class="contact_area p_120">
            <div class="container">
                <div class="row">
                    <h2 class="col-12 text-center mb-5">{{ message.text }}</h2>
                    <div class="col-lg-3">
                        <div class="contact_info">
                            <div class="info_item">
                                <i class="lnr lnr-home"></i>
                                <h6>20290 Borgo, France</h6>
                                <p>106 impasse des cèdres</p>
                            </div>
                            <div class="info_item">
                                <i class="lnr lnr-phone-handset"></i>
                                <h6><a href="#">06 71 72 98 84</a></h6>
                                <p>Du lundi au Dimanche <br/> de 6h00 à 22h00</p>

                            </div>
                            <div class="info_item">
                                <i class="lnr lnr-envelope"></i>
                                <h6><a href="#">jeremybouvier2b@gmail.com</a></h6>
                                <p>N'hesitez pas a me contacter! </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <form class="row contact_form" method="post" id="contactForm" novalidate="novalidate">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name" style="color:red;">{{ displayError.name }}</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Entrez votre nom">
                                </div>
                                <div class="form-group">
                                    <label for="email" style="color:red;">{{ displayError.email }}</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Entrez votre email ">
                                </div>
                                <div class="form-group">
                                    <label for="subject" style="color:red;">{{ displayError.subject }}</label>
                                    <input type="text" class="form-control" id="subject" name="subject" placeholder="Inscrivez le Sujet du message">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="message" style="color:red;">{{ displayError.message }}</label>
                                    <textarea class="form-control" name="message" id="message" rows="1" placeholder="Entrez votre Message"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12 text-right">
                                <button type="submit" value="submit" class="btn submit_btn">Envoi du message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!--================Contact Area =================-->
    {% endblock %}