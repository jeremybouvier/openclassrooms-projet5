
{% extends '/layout/default.twig'%}
    {% block content %}

        <!--================Home Banner Area =================-->
        <section class="banner_area">
            <div class="box_1620">
                <div class="banner_inner d-flex align-items-center">
                    <div class="container">
                        <div class="banner_content text-center" >
                            <h2>Connection Administration</h2>
                            <div class="page_link">
                                <a href="/home">Home</a>
                                <a href="#">Administration</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================End Home Banner Area =================-->

        <!--================Login Area =================-->
        <section class="home_banner_area">

            <div  >
                <article class="row d-flex justify-content-center ">
                        <div class="comment-form col-10" style="margin-top: 15%; border-radius: 20px;">
                            <h1 class="mb-5">Connexion</h1>
                            <form method="post">
                                <input type="hidden" name="token" value="{{ session.token }}">
                                <div class="form-group">
                                    <label for="user">
                                        Nom d'utilisateur : <span class="text-danger">{{ displayError.loginName }}</span>
                                    </label>
                                    <input type="text" class="form-control" id="user" name="loginName">
                                </div>

                                <div class="form-group">
                                    <label for="password">
                                        Mot de passe : <span class="text-danger">{{ displayError.password }}</span>
                                    </label>
                                    <input type="password" class="form-control" id="password" name="password">
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="primary-btn submit_btn" value="Se connecter">
                                </div>
                            </form>
                        </div>
                </article>
            </div>
        </section>
                    <!--================End Login Area =================-->
    {% endblock %}




