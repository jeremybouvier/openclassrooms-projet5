
{% extends '/layout/default.twig' %}

{% block content %}
    <section class="home_banner_area">

        <div class="container box_1620">
            <h1>Mes derniers Posts</h1>
            <div class=" row banner_inner d-flex align-items-center">

    {% for posts in Post %}


        <article class="row blog_item">
            <div class="col-md-3">
                <div class="blog_info text-right">
                    <div class="post_tag">
                        <a href="#">Food,</a>
                        <a class="active" href="#">Technology,</a>
                        <a href="#">Politics,</a>
                        <a href="#">Lifestyle</a>
                    </div>
                    <ul class="blog_meta list">
                        <li><a href="#">Mark wiens<i class="lnr lnr-user"></i></a></li>
                        <li><a href="#">12 Dec, 2017<i class="lnr lnr-calendar-full"></i></a></li>
                        <li><a href="#">1.2M Views<i class="lnr lnr-eye"></i></a></li>
                        <li><a href="#">06 Comments<i class="lnr lnr-bubble"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9">
                <div class="blog_post">
                    <img src="../Templates/img/blog/main-blog/m-blog-1.jpg" alt="">
                    <div class="blog_details">
                        <a href="../post/{{posts.id}}"><h2>{{ posts.title }}</h2></a>
                        <span class="text-mute">{{ posts.updatedate }}</span>
                        <p>{{posts.previewText}}</p>
                        <a href="../post/{{posts.id}}" class="white_bg_btn">Voir l'article</a>
                    </div>
                </div>
            </div>
        </article>

    {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}